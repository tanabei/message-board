<div class="panel panel-default">
    <div class="panel-heading">
    メッセージ一覧
    </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

  <%= form_for(@message,html:{class:"form-horizontal"})do |f| %>
    <div class="form-group">
      <label class="control-label col-sm-1">
      名前:
      </label>
      <div class="col-sm-11">
        <%= f.text_field :name ,class:"form-control" ,:maxlength => "20"%>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-1">
      内容:
      </label>
      <div class="col-sm-11">
        <%= f.text_area :body ,class:"form-control",:size =>"20x3",:maxlength => "100" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
    </div>
<% end %>